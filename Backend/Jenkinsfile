pipeline {
    agent any

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'master', credentialsId: 'aseongjun99', url: 'https://lab.ssafy.com/s12-webmobile1-sub1/S12P11A506.git'
            }
        }

        stage('Create application.yml') {
            steps {
                script {
                    // Jenkins Credentials에서 값 가져오기
                    def dbUrl = credentials('DB_URL')
                    def dbUser = credentials('DB_USER')
                    def dbPassword = credentials('DB_PASSWORD')

                    dir('Backend/src/main/resources') {
                        sh """
                        cat > application.yml <<EOL
                        spring:
                          application:
                            name: muinus

                          datasource:
                            url: ${dbUrl}
                            username: ${dbUser}
                            password: ${dbPassword}
                            driver-class-name: com.mysql.cj.jdbc.Driver
                        EOL
                        """
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('Backend') {
                    sh '''
                    chmod +x gradlew
                    ./gradlew clean bootJar
                    ls -a build/libs
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                    script {
                        sh 'pwd'
                        sh 'ls -a Backend/build/libs/'

                        sshPublisher(
                            publishers: [
                                sshPublisherDesc(
                                    configName: 'muinus-ec2',
                                    transfers: [
                                        sshTransfer(
                                            cleanRemote: false,
                                            excludes: '',
                                            sourceFiles: 'Backend/build/libs/*.jar',
                                            flatten: true,
                                            makeEmptyDirs: false,
                                            noDefaultExcludes: false,
//                                             patternSeparator: '[, ]+',
                                            remoteDirectory: 'project/deploy/',
                                            remoteDirectorySDF: false,
                                            execCommand: '''
                                            ls -la /home/ubuntu/project/deploy/
                                            echo "Current: "
                                            pwd
                                            sh /home/ubuntu/project/script/init_server.sh
                                            ''',
                                            execTimeout: 120000
                                        )
                                    ],
                                    usePromotionTimestamp: false,
                                    useWorkspaceInPromotion: false,
                                    verbose: true
                                )
                            ]
                        )
                    }

            }
        }
    }
}
